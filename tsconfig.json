{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "rootDir": "./src",
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    }
}